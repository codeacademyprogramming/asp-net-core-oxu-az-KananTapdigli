@model oxu.az.Models.News

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>XƏBƏR ƏLAVƏSİ</h1>
    <div class="row">
        <div class="col-12">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-0">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger d-inline-block mt-2"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.CategoryId, (ViewBag.Categories as List<SelectListItem>), new { @class = "form-control" })
                </div>

                <div class="custom-file mt-3 mb-3">
                    <input asp-for="File" type="file" class="custom-file-input" id="customFile" data-val="true" data-val-required="*Şəkil Əlavə Olunmaldır">
                    <label asp-for="File" class="custom-file-label" for="customFile">Şəkil seçin</label>
                    <span asp-validation-for="File" class="text-danger d-inline-block mt-2"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger d-inline-block  mt-2"></span>
                </div>


                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isMain" /> @Html.DisplayNameFor(model => model.isMain)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Əlavə Et" class="btn btn-primary" />

                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
