@model HomeIndexViewModel

<div class="main-top">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 ">
                <div class="frame overflow-hidden position-relative">
                    <div class="lent d-flex position-relative">
                        @foreach (var News in Model.FeaturedNews)
                        {
                            <a href="@Url.Action("News","Home",new { Id = News.Id })">
                                <img src="~/images/@News.FileName" alt="">

                                <div class="title">
                                    <div class="title-date">
                                        @{
                                            String monthName = Microsoft.VisualBasic.DateAndTime.MonthName(News.CreationTime.Month).Substring(0, 3);
                                        }
                                        <span class="day">@News.CreationTime.Day @monthName</span>
                                        <span class="time ml-3">@News.CreationTime.ToString("HH:mm")</span>
                                        <span class="views ml-3">@News.View</span>
                                    </div>
                                    <div class="title-text">
                                        @News.Title
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                    <i class="fas fa-chevron-left position-absolute arrow arrow-left"></i>
                    <i class="fas fa-chevron-right position-absolute arrow arrow-right"></i>
                </div>
            </div>
            <div class=" d-none d-md-block col-md-4">
                <img src="~/images/girl.png" class="mw-100" alt="">
            </div>
        </div>
    </div>
</div>
